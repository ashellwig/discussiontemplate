{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-o",
                "./output/initpost-debug",
                "-Weverything",
                "-fcolor-diagnostics",
                "-fcaret-diagnostics",
                "-fdiagnostics-format=clang",
                "./src/main.cpp",
                "./src/GenFuncs.cpp",
                "-I",
                "./include"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}